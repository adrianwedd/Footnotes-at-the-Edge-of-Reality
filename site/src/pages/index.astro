---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title="Footnotes at the Edge of Reality"
  description="A poem and exegesis about physics, language, and epistemology."
>
  <div class="landing-container">
    <h1>Footnotes at the Edge of Reality</h1>
    <p class="subtitle">A dialogue between physics, language, and what we claim to know.</p>

    <div class="links">
      <a href={`${base}poem`} class="primary-link">Read the Poem</a>
      <a href={`${base}exegesis`} class="primary-link">Read the Exegesis</a>
    </div>

    <p class="hint">Read the poem first; exegesis optional.</p>
  </div>
</BaseLayout>

<style>
  .landing-container {
    padding: 4rem 1rem;
  }

  h1 {
    margin-bottom: 1rem;
  }

  .subtitle {
    color: var(--muted);
    margin-bottom: 3rem;
    font-size: 1.1rem;
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 20rem;
    margin: 0 auto 2rem;
  }

  .primary-link {
    display: block;
    padding: 1rem 2rem;
    background: var(--content-overlay);
    border: 1px solid var(--rule);
    border-radius: 8px;
    text-decoration: none;
    color: var(--fg);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    font-size: 1.1rem;
    transition: all 0.2s ease;
  }

  .primary-link:hover {
    background: rgba(138, 199, 217, 0.10);
    border-color: var(--link);
    color: var(--link);
  }

  .primary-link:focus-visible {
    outline: 2px solid var(--link);
    outline-offset: 3px;
  }

  .hint {
    font-size: 0.9rem;
    color: var(--muted);
    font-style: italic;
  }

  @media (prefers-reduced-motion: reduce) {
    .primary-link {
      transition: none;
    }
  }
</style>
